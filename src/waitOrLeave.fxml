<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300">
    <Label text="The game has started." layoutX="100" layoutY="20" textAlignment="CENTER">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <Button fx:id="waitButton" text="Wait" layoutX="100" layoutY="60" prefWidth="100">
        <font>
            <Font size="17.0"/>
        </font>
    </Button>

    <Button fx:id="leaveButton" text="Leave" layoutX="210" layoutY="60" prefWidth="100">
        <font>
            <Font size="17.0"/>
        </font>
    </Button>
</AnchorPane>